{% load wagtailcore_tags %}

<mj-section padding="8px 24px 0">
    <mj-column>
        <mj-button
            href="{{ value.url }}"
            background-color="#007d7e"
            border="2px solid #007d7e"
            color="white"
            font-size="16px"
            padding="0"
            inner-padding="16px 28px"
            border-radius="8px"
            font-weight="bold"
        >
            {{ value.text }}
        </mj-button>
    </mj-column>
</mj-section>
