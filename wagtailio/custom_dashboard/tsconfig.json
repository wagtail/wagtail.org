{
  "compilerOptions": {
    "outDir": "../static_compiled/js",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "static/frontend",
    "**/__tests__/**/*"
  ]
}
